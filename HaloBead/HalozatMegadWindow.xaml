<Window x:Class="HaloBead.HalozatMegadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HaloBead"
        mc:Ignorable="d"
        Title="HalozatMegadWindow" Height="240" Width="400" FontSize="18" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="Alhálózat neve:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="alhalNevTxb" Grid.Row="0" Grid.Column="1" Width="140" Height="30" HorizontalAlignment="Left" Margin="20"/>
        <Label Content="Címek száma:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="cimekDBTxb" Grid.Row="1" Grid.Column="1" Width="80" Height="30" HorizontalAlignment="Left" Margin="20"/>
        <Button x:Name="addBtn" Content="Hozzáad" Grid.Row="2" Grid.ColumnSpan="2" Width="200" Height="30" Click="addBtn_Click"/>
    </Grid>
</Window>
